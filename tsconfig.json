{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "main.ts"],
  "exclude": ["node_modules"]
}
